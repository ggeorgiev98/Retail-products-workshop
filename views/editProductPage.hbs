<h1>Edit product</h1>
<div class="form">
  <form action='/edit/{{_id}}' method="POST">
    <label for="name">Name</label>
    <input type="text" id="name" name="name" value="{{name}}">
    <label for="name">Description</label>
    <textarea id="name" name="description">{{description}}</textarea>
    <label for="image">ImageUrl</label>
    <input type="text" id="image" name="imageUrl" value="{{imageUrl}}">
    <label for="price">Price</label>
    <input type="number" id="price" name="price" min="1" max="10000" value="{{price}}">
    <input type="submit" value="Edit">
  </form>
</div>